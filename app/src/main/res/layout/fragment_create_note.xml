<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBack"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/imgDone"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_tick"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toTopOf="@id/imgMoreFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@null"
                android:ellipsize="end"
                android:hint="Note Title"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/textColor1"
                android:textColorHint="@color/textColor2"
                android:textSize="@dimen/_16ssp"
                />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/ubuntu"
                android:maxLines="1"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/textColor1"
                android:textColorHint="@color/textColor2"
                android:textSize="@dimen/_10ssp"
                tools:hint="dd/MM/yy hh:mm a" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/appTheme"
                    android:orientation="horizontal">
                <View
                    android:id="@+id/colorView"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="match_parent"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etNoteSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:fontFamily="@font/ubuntu_medium"
                    android:hint="Note Subtitle"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/textColor1"
                    android:textColorHint="@color/textColor2"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layoutImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgNote"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_270sdp"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_delete"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutWebUrl"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutImage"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/etWebLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Web Url"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="textMultiLine"
                        android:layout_margin="@dimen/_10sdp"
                        android:textColor="@color/textColor1"
                        android:textColorHint="@color/textColor2"
                        android:textSize="@dimen/_13ssp" />
                    <ImageView
                        android:id="@+id/imgUrlDelete"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_cancel" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="end"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Cancel"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textSize="@dimen/_10ssp"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor1"
                        android:id="@+id/btnCancel"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="OK"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/textColor1"
                        android:id="@+id/btnOk"/>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWebLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:ellipsize="end"
                android:visibility="gone"
                android:fontFamily="@font/ubuntu"
                android:padding="@dimen/_10sdp"
                tools:hint="Web URL"
                android:textColor="@color/textColor1"
                android:textColorHint="@color/textColor2"
                android:textSize="@dimen/_13ssp"
                android:autoLink="web"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutWebUrl" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutRecordUrl"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" >

                <ImageButton
                    android:id="@+id/record_btn"
                    android:background="@color/mainBack"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/record_btn_pause"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Chronometer
                    android:id="@+id/recordTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintLeft_toRightOf="@+id/record_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/ubuntu"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutPlayer"
                android:visibility="gone"
                android:background="@color/appTheme"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutPlayer2"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/play_pause"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:src="@drawable/player_play_btn"
                        android:layout_weight="1"/>
                    <SeekBar
                        android:id="@+id/seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:thumbTint="@color/textColor1"
                        android:progressTint="@color/iconTint"
                        android:progressBackgroundTint="@color/mainBack"
                        android:layout_weight="3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/player_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:background="@android:color/transparent"
                        android:textColor="@color/textColor1"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/player_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:background="@android:color/transparent"
                        android:textColor="@color/textColor1"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>

                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/etNoteDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_100sdp"
                android:gravity="top"
                android:importantForAutofill="no"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@null"
                android:fontFamily="@font/ubuntu"
                android:hint="Type note here..."
                android:inputType="textMultiLine"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/textColor1"
                android:textColorHint="@color/textColor2"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/imgMoreFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/cardBack"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_more" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>